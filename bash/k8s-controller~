function hook() {
    # ----------------------------------------------------------
    # Here is where we can repeat any bash command with a working
    # Kubernetes kubeconfig
    #
    # Keep it secret. Keep it safe.
    #
    # ----
    k delete po --all
    # ----
    #
    #
    # ----------------------------------------------------------                      
    sleep 1 # Keep the sleep so we don't overload the server
}



while true; do
  hook
done
